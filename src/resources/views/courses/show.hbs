<div class="mt-4">
  <div class="row">
    <div class="col-lg-3 mt-2">
      <div class="card">
        <div class="card-body text-center">
          <a href="#"> <h5 class="card-title">Đăng ký khóa học </h5></a>
          <button type="button" class="btn btn-primary mb-3">Học Ngay</button>
          <p class="card-text">{{course.level}}</p>
          <p class="card-text">{{course.timeToLearn}}</p>

        </div>
      </div>
    </div>
    <div class="col-lg-9">
      <h2>{{course.name}}</h2>
      <iframe
        width="560"
        height="315"
        src="https://www.youtube.com/embed/{{course.videoId}}"
        frameborder="0"
        allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
      <p>{{course.description}}</p>
    </div>
  </div>
</div>